<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp"
    tools:context=".ProfileEditActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile_edit_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="@string/d_back_button"
            android:src="@drawable/arrow_back_48px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/orange_500" />

        <TextView
            android:id="@+id/address_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/edit_profile"
            android:textColor="@color/orange_500"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/profile_register_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/orange_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit" />


    <LinearLayout
        android:id="@+id/address_postal_code_left"
        android:layout_width="348dp"
        android:layout_height="76dp"
        android:layout_marginTop="54dp"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_register_divider" app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/photo"
        />
        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_weight="1" android:text="Button"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="348dp"
        android:layout_height="345dp"
        android:layout_marginTop="52dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_postal_code_left">

        <TextView
            android:id="@+id/edit_profile_name_label"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="2dp"
            android:text="@string/name_address"
            android:textAlignment="textStart"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_profile_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:autofillHints="nameAddress"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor"/>

        <TextView
            android:id="@+id/edit_profile_email_label"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="2dp"
            android:text="@string/email_label"
            android:textAlignment="textStart"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_profile_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:autofillHints="streetAddress"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/address_cellphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/profile_cellphone_left"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/profile_cellphone_right"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/profile_update_ddd_label"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:text="@string/cellphone_label"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="6dp"/>

                <EditText
                    android:id="@+id/profile_update_ddd_input"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:autofillHints="complementAddress"
                    android:background="@drawable/edit_text_border"
                    android:ems="10"
                    android:inputType="number"
                    tools:ignore="LabelFor"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_cellphone_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profile_cellphone_left"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/new_cellphone_label"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textAlignment="textStart"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/new_cellphone_label_input"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:autofillHints="987 654 321"
                    android:background="@drawable/edit_text_border"
                    android:ems="10"
                    android:inputType="number"
                    tools:ignore="LabelFor"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/edit_profile_password_label"
            android:layout_width="161dp"
            android:layout_height="24dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="2dp"
            android:text="@string/password_label"
            android:textAlignment="textStart"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_profile_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:autofillHints="complementAddress"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_edit_form"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/button5"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:text="Cancel" app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:text="Save" app:layout_constraintEnd_toEndOf="parent" tools:layout_editor_absoluteY="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>