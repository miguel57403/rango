<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/containerMeu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_item_warning"
    >
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_margin="8dp"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/item_cart"
                    android:scaleType="centerCrop"
                    android:contentDescription="ItemCard"

            />
            <LinearLayout android:layout_width="235dp"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="20px"
                          android:orientation="vertical">

                <TextView
                        android:id="@+id/cart_item_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange_500"
                        android:textFontWeight="700"
                        android:textStyle="normal"
                        android:text="Pepperoni Pizza"
                />
                <LinearLayout
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/border_item"
                        android:layout_marginTop="50px"
                >
                    <ImageView
                            android:id="@+id/btnMinus"
                            android:layout_width="30px"
                            android:layout_height="30px"
                            app:srcCompat="@drawable/diminuir"
                            android:layout_marginLeft="5px"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/orange_500"
                    />
                    <TextView
                            android:id="@+id/quantifyItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="65px"
                            android:text="1"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/orange_500"
                    />
                    <ImageView
                            android:id="@+id/btnPlus"
                            android:layout_width="30px"
                            android:layout_height="30px"
                            app:srcCompat="@drawable/adicionar"
                            android:layout_marginLeft="65px"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:orientation="horizontal"
                >
                    <TextView
                            android:id="@+id/priceItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="â‚¬2,99"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:orientation="vertical"
                android:layout_gravity="end"
        >
            <ImageView
                    android:id="@+id/iconWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_error_outline_24"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
            />
            <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_delete_24"
                    android:layout_gravity="end"
                    android:layout_marginTop="40dp"
            />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>