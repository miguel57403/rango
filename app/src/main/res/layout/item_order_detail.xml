<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_detail_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[0x]"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_detail_item_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="[Product name]"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toEndOf="@+id/order_detail_item_quantity"
        app:layout_constraintEnd_toStartOf="@+id/order_detail_item_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_detail_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/k_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>