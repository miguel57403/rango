<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp"
    android:layout_height="match_parent"
    tools:context=".AddressRegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/orders_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/address_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/orange_500"
            android:src="@drawable/arrow_back_48px"
            android:contentDescription="@string/description_address" />

        <TextView
            android:id="@+id/address_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/orange_500"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/new_address" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/orders_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/orange_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orders_header" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="348dp"
        android:layout_height="365dp"
        android:layout_marginTop="52dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orders_divider">

        <TextView
            android:id="@+id/new_address_name_label"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="2dp"
            android:text="@string/name_address"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/new_address_name_input"
            app:layout_constraintStart_toStartOf="@+id/new_address_name_input" />

        <EditText
            android:id="@+id/new_address_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:autofillHints="nameAddress"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/new_address_street_label"
            app:layout_constraintStart_toStartOf="@+id/new_address_street_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/new_address_street_label"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="2dp"
            android:text="@string/street_address"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/new_address_street_input"
            app:layout_constraintStart_toStartOf="@+id/new_address_street_input" />

        <EditText
            android:id="@+id/new_address_street_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:autofillHints="streetAddress"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/login_password_input"
            app:layout_constraintStart_toStartOf="@+id/login_password_input"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/address_postal_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/address_postal_code_left"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/new_address_number_label"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:text="@string/number_address"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="6dp" />

                <EditText
                    android:id="@+id/new_address_number_input"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:autofillHints="complementAddress"
                    android:background="@drawable/edit_text_border"
                    android:ems="10"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/new_address_number_label"
                    tools:ignore="LabelFor,MissingConstraints,TextFields"
                    tools:layout_editor_absoluteX="2dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/address_postal_code_right"
                android:layout_width="0dp"
                android:layout_height="63dp"
                android:layout_marginStart="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/address_postal_code_left"
                app:layout_constraintStart_toEndOf="@+id/address_postal_code_left"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/new_address_postal_code_label"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:text="@string/postal_code_address"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/new_address_postal_code_input"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:autofillHints="complementAddress"
                    android:background="@drawable/edit_text_border"
                    android:ems="10"
                    android:inputType="number"
                    android:minHeight="48dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/new_address_postal_code_label"
                    app:layout_constraintTop_toBottomOf="@+id/new_address_postal_code_label"
                    app:layout_constraintVertical_bias="1.0"
                    tools:ignore="LabelFor,MissingConstraints,TextFields" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/new_address_complement_label"
            android:layout_width="161dp"
            android:layout_height="24dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="2dp"
            android:text="@string/complement_address"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/new_address_street_input"
            app:layout_constraintStart_toStartOf="@+id/new_address_street_input" />

        <EditText
            android:id="@+id/new_address_complement_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:autofillHints="complementAddress"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/login_password_input"
            app:layout_constraintStart_toStartOf="@+id/login_password_input"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="344dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:text="@string/save_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.802" />


</androidx.constraintlayout.widget.ConstraintLayout>